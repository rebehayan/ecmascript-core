{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node.js 디버깅",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "skipFiles": ["<node_internals>/**"],
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Localhost：Chrome 디버깅",
